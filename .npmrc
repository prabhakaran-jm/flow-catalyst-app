# Configure pnpm hoisting for Expo packages
# This ensures expo-asset and other Expo packages are accessible to Metro config
# These patterns hoist Expo and React Native packages to the root node_modules
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=*@expo/*
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*@react-native/*

# Enable strict peer dependencies (Expo requires this)
strict-peer-dependencies=false

# Shamefully hoist all dependencies for better compatibility with Metro and EAS builds
# This is needed because @expo/metro-config requires expo-asset internally
# and pnpm's isolated module resolution can prevent it from being found
shamefully-hoist=true
